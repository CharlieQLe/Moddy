{
    "id" : "io.github.charlieqle.Moddy",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.node18"
    ],
    "command" : "moddy",
    "build-options": {
        "append-path": "/usr/lib/sdk/node18/bin",
        "env": {
            "npm_config_nodedir": "/usr/lib/sdk/node18"
        }  
    },
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "modules/gnome-autoar/gnome-autoar.json",
        {
            "name" : "moddy",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts": [
                "-Doffline-mirror=/app/yarn-mirror"
            ],
            "modules": [
                "modules/blueprint-compiler/blueprint-compiler.json",
                "modules/yarn-deps/yarn-deps.json"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}
