using Gtk 4.0;
using Adw 1;

template PreferencesWindow : Adw.PreferencesWindow {
    Adw.PreferencesPage {
        Adw.PreferencesGroup {
            title: "NexusMods settings";
            
            Adw.EntryRow nexusEntry {
                title: "API Key";
                changed => onNexusKeyChanged();
            }
        }
    }
}